<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".FrontPage"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="7dp">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="309dp"
        android:layout_height="54dp"
        android:layout_marginTop="32dp"
        android:outlineAmbientShadowColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/companion" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:layout_marginBottom="12dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/login"
        tools:ignore="MissingConstraints" />

    <AutoCompleteTextView
        android:id="@+id/actv"
        android:layout_width="256dp"
        android:layout_height="32dp"
        android:background="@color/button"
        android:completionThreshold="1"
        android:hint="Type to Search"
        android:textColorHint="@color/white"
        android:textColor="@color/grey"
        android:popupBackground="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toStartOf="@+id/search_badge"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.52" />


    <ImageView
        android:id="@+id/search_badge"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:srcCompat="@drawable/searchicon"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView0"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintBottom_toTopOf="@id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10"
        app:layout_constraintVertical_bias="0.609"
        app:srcCompat="@drawable/peclogo" />

    <HorizontalScrollView
        android:id="@+id/hoz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/scroll1"
                android:layout_width="393dp"
                android:layout_height="255dp"
                android:layout_margin="0dp"
                app:srcCompat="@drawable/slide1" />

            <ImageView
                android:id="@+id/scroll2"
                android:layout_width="393dp"
                android:layout_height="255dp"
                app:srcCompat="@drawable/slide2" />

            <ImageView
                android:id="@+id/scroll3"
                android:layout_width="393dp"
                android:layout_height="255dp"
                app:srcCompat="@drawable/slide3" />
            <ImageView
                android:id="@+id/scroll4"
                android:layout_width="393dp"
                android:layout_height="255dp"
                app:srcCompat="@drawable/slide4" />

        </LinearLayout>

    </HorizontalScrollView>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="343dp"
        android:layout_height="57dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/hoz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/line" />

    <Button
        android:id="@+id/button2"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/btn"
        android:text="Sign In"
        android:textColor="@color/white"
        app:cornerRadius="65dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>